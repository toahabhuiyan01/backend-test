{
    "name": "aws-ts-serverless",
    "type": "commonjs",
    "version": "1.0.0",
    "description": "AWS Serverless setup with Typescript Functions",
    "main": "index.js",
    "repository": "https://github.com/leoroese/blog-tube",
    "author": "Leonardo Roese",
    "license": "MIT",
    "scripts": {
        "codegen": "openapi-generator-cli generate -i ./openApi.yml -g typescript-fetch -o src/generated-sources/openapi --additional-properties=supportsES6=true,npmVersion=6.9.0,typescriptThreePlus=true",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "build": "tsc --noEmit",
        "watch-build": "tsc -w",
        "start": "node dist/index.js",
        "watch-start": "nodemon --delay 2 -w dist/ -x; npm run start",
        "dev": "concurrently -k -p '[{name}]' -n 'typescript,api' -c 'yellow.bold,cyan.bold' npm:watch-build npm:watch-start",
        "dev-ts": "ts-node-dev --respawn --pretty --transpile-only src/index.ts",
        "lint": "tslint --format prose --project ."
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.80",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/dotenv-safe": "^8.1.2",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.38",
        "@types/serverless": "^1.78.32",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "esbuild": "^0.14.41",
        "eslint": "^7.31.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^27.0.6",
        "nodemon": "^2.0.16",
        "prettier": "^2.3.2",
        "serverless": "^2.52.1",
        "serverless-esbuild": "^1.30.0",
        "serverless-offline": "^7.0.0",
        "serverless-plugin-typescript": "^1.1.9",
        "ts-jest": "^27.0.4",
        "ts-node": "^10.1.0",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "@openapitools/openapi-generator-cli": "^2.3.3",
        "aws-lambda": "^1.0.6",
        "cross-env": "^7.0.3",
        "dotenv-safe": "^8.2.0",
        "express": "^4.18.1",
        "morgan": "^1.10.0",
        "nanoid": "^3.3.4",
        "openapi-backend": "^5.3.0",
        "reflect-metadata": "^0.1.13",
        "sql.js": "^1.6.2",
        "sqlite3": "^5.0.8",
        "typeorm": "^0.3.6",
        "wait-on": "^6.0.1"
    }
}
